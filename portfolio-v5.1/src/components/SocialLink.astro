---
// SocialLink.astro - Reusable social media link component with SVG icon support
export interface Props {
  href: string;
  label: string;
  iconSvg: string;
}

const { href, label, iconSvg } = Astro.props;
---

<a 
  href={href}
  target="_blank" 
  rel="noopener noreferrer"
  class="flex items-center gap-1 text-[#500F0B]/70 hover:text-[#500F0B] transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#500F0B] rounded p-1 font-primary nav-font"
  aria-label={label}
>
  <span class="icon w-[18px] h-[18px]" aria-hidden="true" set:html={iconSvg.replace(/fill="black"/g, 'fill="currentColor"')} />
</a>
