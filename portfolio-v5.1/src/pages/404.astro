---
import Base from "../layouts/Base.astro";
import BackgroundStatic from "../components/BackgroundStatic.astro";
---

<Base title="404 â€” Page Not Found | Theunis Hall">
  <BackgroundStatic opacity={0.3} isLightBg={true} />

  <main class="relative z-10 min-h-screen flex items-center justify-center px-8">
    <div class="text-center max-w-2xl">
      <!-- 404 Number -->
      <h1 class="text-[160px] md:text-[200px] font-primary leading-none text-[#500F0B] mb-4">
        404
      </h1>
      
      <!-- Message -->
      <h2 class="text-[32px] md:text-[40px] font-primary text-[#500F0B] mb-6">
        Page Not Found
      </h2>
      
      <p class="text-[18px] text-[#500F0B]/70 font-sans max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
    </div>
  </main>
</Base>
