---
import Base from "../layouts/Base.astro";
import BackgroundStatic from "../components/BackgroundStatic.astro";
import Icon from "../components/Icon.astro";
import BioSectionInteractive from "../components/BioSectionInteractive.astro";
---
<Base title="Theunis Hall â€” Portfolio">
  <BackgroundStatic opacity={0.3} isLightBg={true} />

  <main class="relative z-10 container-page py-16 md:py-24">
    <!-- Home/Bio Section -->
    <section id="home" class="min-h-[90vh] flex flex-col justify-center">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
        <div>
          <h1 class="h1-display flex items-center gap-3">Hi, I'm Theunis <Icon name="wave" size={32} class="text-[#500F0B] mt-1" /></h1>
          <div class="mt-5 max-w-prose">
            <BioSectionInteractive className="h5" />
          </div>
        </div>
        <div class="rounded-3xl overflow-hidden border border-[#EAE2DE] bg-white/60 aspect-[3/4]">
          <img 
            src="/images/profile-01.png" 
            alt="Profile photo of Theunis Hall, looking to the side on a cloudy beach, wearing a black cap and checkered shirt" 
            class="w-full h-full object-cover"
            width="500"
            height="667"
          />
        </div>
      </div>
    </section>

    <!-- Work Section -->
    <section id="work" class="min-h-screen py-32">
      <div class="max-w-4xl mx-auto">
        <h2 class="h2-display mb-16">Selected Work</h2>
        
        <!-- Work samples - these are placeholders -->
        <div class="grid grid-cols-1 gap-24">
          <!-- Work Item 1 -->
          <div class="border border-[#EAE2DE] rounded-2xl p-8 bg-white/40 backdrop-blur-sm">
            <h3 class="text-2xl font-medium mb-4">E-commerce Platform for Nampharm</h3>
            <div class="text-[#500F0B] opacity-80 mb-6">
              <p>Designed and implemented a complete e-commerce solution for Namibia's largest pharmaceutical distributor, including operations tools and various client-facing sites.</p>
            </div>
            <div class="flex flex-wrap gap-3 mb-8">
              <span class="px-3 py-1 text-sm bg-[#500F0B]/10 text-[#500F0B] rounded-full">UX Design</span>
              <span class="px-3 py-1 text-sm bg-[#500F0B]/10 text-[#500F0B] rounded-full">React</span>
              <span class="px-3 py-1 text-sm bg-[#500F0B]/10 text-[#500F0B] rounded-full">Next.js</span>
            </div>
          </div>

          <!-- Work Item 2 -->
          <div class="border border-[#EAE2DE] rounded-2xl p-8 bg-white/40 backdrop-blur-sm">
            <h3 class="text-2xl font-medium mb-4">Namibia's First Super App</h3>
            <div class="text-[#500F0B] opacity-80 mb-6">
              <p>Contributed to the design and development of Namibia's first super app at Buddy Industries, providing essential services to thousands of users daily.</p>
            </div>
            <div class="flex flex-wrap gap-3 mb-8">
              <span class="px-3 py-1 text-sm bg-[#500F0B]/10 text-[#500F0B] rounded-full">Product Design</span>
              <span class="px-3 py-1 text-sm bg-[#500F0B]/10 text-[#500F0B] rounded-full">Flutter</span>
              <span class="px-3 py-1 text-sm bg-[#500F0B]/10 text-[#500F0B] rounded-full">Firebase</span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Base>
