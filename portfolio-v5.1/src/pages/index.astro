---
import Base from "../layouts/Base.astro";
import BackgroundStatic from "../components/BackgroundStatic.astro";
---
<Base title="Theunis Hall — Portfolio">
  <BackgroundStatic opacity={0.3} isLightBg={true} />

  <main class="relative z-10 container-page py-16 md:py-24">
    <section class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
      <div>
        <h1 class="h1-display">Hi, I'm Theunis ✨</h1>
        <p class="p-lede mt-5 max-w-prose">
          I'm a product designer based in <span class="underline decoration-[color:var(--border)]">Windhoek</span>. Right now I'm building an e‑commerce app for Nampharm. I believe cutting through the BS.
        </p>
      </div>
      <div class="rounded-3xl overflow-hidden border border-[color:var(--border)] bg-white/60 shadow-sm aspect-[3/4]"></div>
    </section>

    <!-- Footer placeholder -->
    <footer class="mt-24 flex items-center gap-3 text-sm text-[color:var(--ink-muted)]">
      <span>©2025, Theunis Hall</span>
      <span>•</span>
      <span>site v5.3</span>
      <span>•</span>
      <a href="#" class="underline">Resume</a>
    </footer>
  </main>
</Base>
