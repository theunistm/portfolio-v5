---
import Base from "../layouts/Base.astro";
import BackgroundStatic from "../components/BackgroundStatic.astro";
import Icon from "../components/Icon.astro";
---

<Base title="Explorations â€” Theunis Hall">
  <BackgroundStatic opacity={0.3} isLightBg={true} />
  
  <main class="relative z-10 container-page py-16 md:py-24">
    <section class="max-w-4xl align-left">
      <h1 class="h1-display mb-12">Explorations</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Placeholder for exploration items -->
        <div class="border border-[#EAE2DE] rounded-2xl p-6 bg-white/40 backdrop-blur-sm hover:shadow-md transition-shadow">
          <h2 class="text-xl font-medium mb-3">UI Components</h2>
          <p class="text-[#500F0B] opacity-80 mb-4">A collection of reusable UI components built with various frameworks.</p>
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="px-2 py-0.5 text-xs bg-[#500F0B]/10 text-[#500F0B] rounded-full">React</span>
            <span class="px-2 py-0.5 text-xs bg-[#500F0B]/10 text-[#500F0B] rounded-full">Tailwind</span>
          </div>
        </div>
        
        <div class="border border-[#EAE2DE] rounded-2xl p-6 bg-white/40 backdrop-blur-sm hover:shadow-md transition-shadow">
          <h2 class="text-xl font-medium mb-3">Interactive Prototypes</h2>
          <p class="text-[#500F0B] opacity-80 mb-4">Experimental interaction patterns and animation concepts.</p>
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="px-2 py-0.5 text-xs bg-[#500F0B]/10 text-[#500F0B] rounded-full">Framer Motion</span>
            <span class="px-2 py-0.5 text-xs bg-[#500F0B]/10 text-[#500F0B] rounded-full">GSAP</span>
          </div>
        </div>
        
        <div class="border border-[#EAE2DE] rounded-2xl p-6 bg-white/40 backdrop-blur-sm hover:shadow-md transition-shadow">
          <h2 class="text-xl font-medium mb-3">Design Patterns</h2>
          <p class="text-[#500F0B] opacity-80 mb-4">Studies in design system architecture and component organization.</p>
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="px-2 py-0.5 text-xs bg-[#500F0B]/10 text-[#500F0B] rounded-full">Design Systems</span>
          </div>
        </div>
        
        <div class="border border-[#EAE2DE] rounded-2xl p-6 bg-white/40 backdrop-blur-sm hover:shadow-md transition-shadow">
          <h2 class="text-xl font-medium mb-3">Code Experiments</h2>
          <p class="text-[#500F0B] opacity-80 mb-4">Technical explorations and programming challenges.</p>
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="px-2 py-0.5 text-xs bg-[#500F0B]/10 text-[#500F0B] rounded-full">TypeScript</span>
            <span class="px-2 py-0.5 text-xs bg-[#500F0B]/10 text-[#500F0B] rounded-full">WebGL</span>
          </div>
        </div>
      </div>
    </section>
  </main>
</Base>
